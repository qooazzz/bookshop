<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.gdpu.dao.BookDao">

    <resultMap id="mymap" type="cn.edu.gdpu.bean.Book">
        <id property="id" column="id"/>
        <result property="name" column="bookname"/>
        <result property="author" column="author"/>
        <result property="price" column="price"/>
        <result property="sales" column="sales"/>
        <result property="stock" column="stock"/>
        <result property="publisher" column="publisher"/>
        <result property="category" column="category"/>
        <result property="imagepath" column="imagepath"/>
    </resultMap>

    <!--    public Book getBookById(Integer id);-->
    <select id="getBookById" resultMap="mymap">
        select * from t_book where id=#{id}
    </select>

    <!--    public int updateBook(Book book);-->
    <update id="updateBook">
        update t_book
        <set>
            <if test="name!=null &amp;&amp; !name.equals('')">
                bookname=#{name},
            </if>
            <if test="author!=null &amp;&amp; !author.equals('')">
                author=#{author},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
            <if test="sales!=null">
                sales=#{sales},
            </if>
            <if test="stock!=null">
                stock=#{stock},
            </if>
            <if test="publisher!=null &amp;&amp; !publisher.equals('')">
                publisher=#{publisher},
            </if>
            <if test="category!=null &amp;&amp; !category.equals('')">
                category=#{category},
            </if>
            <if test="imagepath!=null &amp;&amp; !imagepath.equals('')">
                imagepath=#{imagepath},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <!--    public int addBook(Book book);-->
    <insert id="addBook">
        insert into t_book values(#{id},#{name},#{author},#{price},#{sales},#{stock},#{publisher},#{category},#{imagepath})
    </insert>

    <!--    public int deleteBookById(Integer id);-->
    <delete id="deleteBookById">
        delete from t_book where id=#{id}
    </delete>

    <!--    public List<Book> getBooks();-->
    <select id="getBooks" resultMap="mymap">
        select * from t_book
    </select>

    <!--    public List<Book> getBooksByPage(Page page);-->
    <select id="getBooksByPage" resultMap="mymap">
        <bind name="start" value="(pageNo-1)*pageSize"/>
        select * from t_book LIMIT #{start},#{pageSize}
    </select>

    <!--    public Integer getBooksTotal();-->
    <select id="getBooksTotal" resultType="Integer">
        select  count(*) from t_book
    </select>

    <!--    public Integer getBooksTotalByName(String bookname);-->
    <select id="getBooksTotalByName" resultType="Integer">
        <bind name="key" value="'%'+bookname+'%'"/>
        select count(*) from t_book
        <where>
            <if test="bookname!=null &amp;&amp; !bookname.equals('') ">
                bookname like #{key}
            </if>
        </where>
    </select>

    <!--    public List<Book> getBooksByName(String bookname);-->
    <select id="getBooksByName" resultMap="mymap">
        <bind name="key" value="'%'+bookname+'%'"/>
        select * from t_book
        <where>
            <if test="bookname!=null &amp;&amp; !bookname.equals('')">
                bookname like #{key}
            </if>
        </where>
    </select>

    <!--    public List<Book> getBooksByPageAndName(Page page,String bookname);-->
    <select id="getBooksByPageAndName" resultMap="mymap">
        <bind name="start" value="(page.pageNo-1)*page.pageSize"/>
        <bind name="key" value="'%'+bookname+'%'"/>
        select * from t_book
        <where>
            <if test="bookname!=null &amp;&amp; !bookname.equals('')">
                bookname like #{key}
            </if>
        </where>
        <if test="page.pageNo!=null &amp;&amp; page.pageSize!=null">
            limit #{start},#{page.pageSize}
        </if>
    </select>

</mapper>