<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.gdpu.dao.OrderDao">

    <resultMap id="mymap" type="cn.edu.gdpu.bean.Order">
        <id property="id" column="id"/>
        <result property="createTime" column="createTime"/>
        <result property="payTime" column="payTime"/>
        <result property="price" column="price"/>
        <result property="userId" column="userId"/>
        <result property="status" column="status"/>
    </resultMap>

    <!--    public Order getOrderById(String id);-->
    <select id="getOrderById" resultMap="mymap">
        select * from t_order where id=#{id}
    </select>

    <!--    public int updateOrder(Order order);-->
    <update id="updateOrder">
        update t_order
        <set>
            <if test="createTime!=null &amp;&amp; !createTime.equals('')">
                createTime=#{createTime},
            </if>
            <if test="payTime!=null &amp;&amp; !payTime.equals('')">
                payTime=#{payTime},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
            <if test="userId!=null ">
                userId=#{userId},
            </if>
            <if test="status!=null">
                status=#{status},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <!--    public int addOrder(Order order);-->
    <insert id="addOrder">
        insert  into t_order values(#{id},#{createTime},#{payTime},#{price},#{userId},#{status})
    </insert>

    <!--    public int deleteOrderById(String id);-->
    <delete id="deleteOrderById">
        delete from t_order where id=#{id}
    </delete>

    <!--    public void getOrders();-->
    <select id="getOrders" resultMap="mymap">
        select * from t_order
    </select>

    <!--    public List<Order> getOrderByUserId(Integer userId);-->
    <select id="getOrderByUserId" resultMap="mymap">
        select * from t_order where userId=#{userId}
    </select>


</mapper>